@model Product

@{
ViewBag.Title = "Edit";
Layout = "_Layout";
}

<form method="post">
    <input type="hidden" asp-for="ProductId" />

    <label>Name</label>
    <input asp-for="Name" required />

    <label>Category</label>
    <select asp-for="CategoryId" asp-items="ViewBag.Categories"></select>

    <label>Price</label>
    <input asp-for="Price" type="number" step="0.01" required />

    <label>Quantity</label>
    <input asp-for="Quantity" type="number" required />

    <label>Low Stock Threshold</label>
    <input asp-for="LowStockThreshold" type="number" required />

    <button type="submit">Save</button>
</form>
